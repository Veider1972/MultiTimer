<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MultiTimer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimaryContainer">@color/color_primary_container</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorOnSurfaceVariant">@color/color_primary_dark</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MultiTimer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MultiTimer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorForegroundInverse">@color/black</item>


        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.MultiTimer.NoActionBar.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MultiTimer.NoActionBar.AppWidgetContainer" parent="Theme.MultiTimer.NoActionBar.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">4dp</item>
    </style>

    <style name="Theme.MultiTimer.NavDrawer" parent="Widget.MaterialComponents.AppBarLayout.Surface"></style>

</resources>