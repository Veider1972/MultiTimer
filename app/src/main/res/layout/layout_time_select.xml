<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/first_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="9"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/second_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="9"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/time_divider" />

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/first_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="5"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/second_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="9"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/time_divider" />

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/first_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="5"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />

        <com.alexzaitsev.meternumberpicker.MeterNumberPicker
            android:id="@+id/second_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:mnp_max="9"
            app:mnp_min="0"
            app:mnp_textSize="@dimen/time_selector_number_size" />
    </LinearLayout>

</LinearLayout>